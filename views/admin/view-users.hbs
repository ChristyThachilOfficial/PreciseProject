<section class="mt-5">
   <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="card mt-5">
                <div class="card-header card-header-primary">
                  <h4 class="card-title ">USERS</h4>
                  
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table mt-5">
                      <thead class=" text-primary">
                        <th>
                          No
                        </th>
                        <th>
                          user name
                        </th>
                         <th>
                          Email
                        </th>
                        <th>
                          Number
                        </th>
                       
                        
                         <th>
                          Action
                        </th>
                      </thead>
                      <tbody>
                        {{#each users}}
                            
                       
                        <tr>
                            
                          <td>
                          {{add @index '1'}}
                          </td>
                          <td>
                            {{this.name}}
                          </td>
                           <td>
                            {{this.email}}
                          </td>
                          <td>
                            {{this.number}}
                          </td>
                          {{#eq this.block 'true'}}
                               <td >
                           
                            <a class="btn btn-danger " href="/admin/unblockusers/{{this._id}}">block</a>
                          </td>
                          {{else}}
                             <td >
                           
                            <a class="btn btn-success " href="/admin/blockusers/{{this._id}}">Unblock</a>
                          </td>

                          {{/eq}}
                          
                         
                            
                         
                        </tr>
                         {{/each}}
                       
                      </tbody>
                    </table>
