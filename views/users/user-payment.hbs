<script>
    function applyCoupons(cartPrice) {
        let coupon = document.getElementById('couponCode').value
        $.ajax({
            url: '/checkCouponCart/' + coupon + '/' + cartPrice,
            method: 'get',
            success: (response) => {
                if (response.invalid) {
                    document.getElementById('discountPrice').innerHTML = 000
                    document.getElementById('totalPrice').innerHTML = cartPrice
                    document.getElementById('totalCartPrice').value = cartPrice
                    document.getElementById('errorDiv').innerHTML = ' <span class="text-danger">Enter a valid coupon!!</span>'
                } else if (response.used) {
                    document.getElementById('discountPrice').innerHTML = 000
                    document.getElementById('totalPrice').innerHTML = cartPrice
                    document.getElementById('totalCartPrice').value = cartPrice
                    document.getElementById('errorDiv').innerHTML = ' <span class="text-danger">Coupon already claimed!!</span>'
                } else {
                    document.getElementById('errorDiv').innerHTML = ' '
                    document.getElementById("discountPrice").innerHTML = response.discountPrice
                    document.getElementById("totalPrice").innerHTML = response.finalPrice
                    document.getElementById("totalCartPrice").value = response.finalPrice
                }

            }
        })

    }
</script>


