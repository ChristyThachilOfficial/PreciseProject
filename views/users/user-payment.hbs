        $.ajax({
            url: '/verify-payment',
            data: {
                payment,
                order
            },
            method: 'post',
            success: (response) => {
                if (response.status) {
                    location.href = '/ordersuccess'
                } else {
                    alert('payment failed')
                }
            }
        })
    }
