<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>

<script >
    $(document).ready(function() {
        $('#checkout-form').validate({
            rules: {
                firstname: {
                    required: true
                },
                lastname: {
                    required: true
                },
                housename: {
                    required: true
                },
                streetaddress: {
                    required: true
